---
import Layout from '../layouts/Layout.astro';

const SERVER_URL = import.meta.env.PUBLIC_SERVER_URL || 'http://localhost:3000';
---

<Layout title="Fellowsip - Collaborative Tasting, Elevated">
  <main class="bg-[#0b0e14] text-white selection:bg-orange-500/30">
    <!-- Navigation -->
    <nav class="fixed w-full z-50 bg-[#0b0e14]/80 backdrop-blur-md border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-xl">F</span>
            </div>
            <span class="text-xl font-bold tracking-tight">Fellowsip</span>
          </div>
          <div class="flex items-center gap-4">
            <a href={`${SERVER_URL}/auth/google`} class="text-sm font-medium text-gray-400 hover:text-white transition-colors">Login</a>
            <a href={`${SERVER_URL}/auth/google`} class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-bold transition-all shadow-lg shadow-orange-500/20">Get Started</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-orange-500/10 blur-[120px] rounded-full"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-blue-500/10 blur-[120px] rounded-full"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="text-center lg:text-left space-y-8">
            <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight leading-tight">
              Taste the <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600">community</span>
            </h1>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto lg:mx-0 leading-relaxed">
              Fellowsip is the collaborative tasting platform for whisky, tea, wine, or anything you're passionate about. Host live sessions, invite your friends, and discover new flavors together in real-time.
            </p>
          </div>
          <div class="relative lg:ml-8">
            <div class="absolute -inset-1 bg-gradient-to-r from-orange-500 to-orange-600 rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
            <div class="relative bg-[#161b22] rounded-2xl border border-gray-800 overflow-hidden shadow-2xl aspect-[4/3] flex flex-col">
              <!-- Mockup Header -->
              <div class="h-10 bg-[#1c2128] border-b border-gray-800 flex items-center px-4 gap-2">
                <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-red-500/20"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/20"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-green-500/20"></div>
                </div>
                <div class="flex-1 flex justify-center">
                  <div class="w-32 h-4 bg-[#0b0e14] rounded-md"></div>
                </div>
              </div>
              <!-- Mockup Content -->
              <div class="flex-1 flex overflow-hidden">
                <!-- Mockup Sidebar -->
                <div class="w-16 bg-[#11141b] border-r border-gray-800 flex flex-col items-center py-4 gap-4">
                  <div class="w-8 h-8 rounded-lg bg-orange-500/20 flex items-center justify-center text-orange-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                  </div>
                  <div class="w-8 h-8 rounded-lg bg-gray-800/50"></div>
                  <div class="w-8 h-8 rounded-lg bg-gray-800/50"></div>
                  <div class="w-8 h-8 rounded-lg bg-gray-800/50"></div>
                </div>
                <!-- Mockup Main -->
                <div class="flex-1 p-6 space-y-6 bg-[#0b0e14]">
                  <div class="flex justify-between items-center">
                    <div class="space-y-2">
                      <div class="w-32 h-6 bg-gray-800 rounded-md"></div>
                      <div class="w-20 h-3 bg-gray-800/50 rounded-md"></div>
                    </div>
                    <div class="w-24 h-8 bg-orange-500/20 border border-orange-500/30 rounded-lg"></div>
                  </div>
                  <div class="grid grid-cols-2 gap-4">
                    <div class="h-32 bg-[#161b22] border border-gray-800 rounded-xl p-4 space-y-3">
                      <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-full bg-blue-500/20"></div>
                        <div class="w-20 h-4 bg-gray-800 rounded-md"></div>
                      </div>
                      <div class="space-y-2">
                        <div class="w-full h-2 bg-gray-800/50 rounded-full"></div>
                        <div class="w-2/3 h-2 bg-gray-800/50 rounded-full"></div>
                      </div>
                    </div>
                    <div class="h-32 bg-[#161b22] border border-gray-800 rounded-xl p-4 space-y-3">
                      <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-full bg-purple-500/20"></div>
                        <div class="w-20 h-4 bg-gray-800 rounded-md"></div>
                      </div>
                      <div class="space-y-2">
                        <div class="w-full h-2 bg-gray-800/50 rounded-full"></div>
                        <div class="w-2/3 h-2 bg-gray-800/50 rounded-full"></div>
                      </div>
                    </div>
                  </div>
                  <div class="h-24 bg-orange-500/5 border border-orange-500/10 rounded-xl p-4 flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg bg-orange-500/20 flex items-center justify-center text-orange-500">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    </div>
                    <div class="flex-1 space-y-2">
                      <div class="w-24 h-4 bg-orange-500/30 rounded-md"></div>
                      <div class="w-full h-2 bg-orange-500/10 rounded-full"></div>
                      <div class="w-4/5 h-2 bg-orange-500/10 rounded-full"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-24 bg-[#0b0e14] relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-5xl font-bold mb-4">Built for <span class="text-orange-500">Shared</span> Discovery.</h2>
          <p class="text-gray-400 text-lg max-w-2xl mx-auto">Tasting is better with friends. Fellowsip gives you the tools to connect, discuss, and learn from each other.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Feature 1 -->
          <div class="p-8 rounded-2xl bg-[#161b22] border border-gray-800 hover:border-orange-500/50 transition-all group">
            <div class="w-12 h-12 bg-orange-500/10 rounded-xl flex items-center justify-center text-orange-500 mb-6 group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Real-time Collaboration</h3>
            <p class="text-gray-400 leading-relaxed">Chat with friends in real-time as you taste. Share flavor notes, brewing parameters, and impressions instantly.</p>
          </div>

          <!-- Feature 2 -->
          <div class="p-8 rounded-2xl bg-[#161b22] border border-gray-800 hover:border-orange-500/50 transition-all group">
            <div class="w-12 h-12 bg-blue-500/10 rounded-xl flex items-center justify-center text-blue-500 mb-6 group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Tasting notes made easy</h3>
            <p class="text-gray-400 leading-relaxed">Automatically generate tasting notes from your shared tasting sessions.</p>
          </div>

          <!-- Feature 3 -->
          <div class="p-8 rounded-2xl bg-[#161b22] border border-gray-800 hover:border-orange-500/50 transition-all group">
            <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center text-purple-500 mb-6 group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Digital Cellar</h3>
            <p class="text-gray-400 leading-relaxed">Keep a permanent record of every session. Search your history, track your preferences, and build your digital tasting journal.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- How it Works -->
    <section class="py-24 bg-[#11141b]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-3xl lg:text-5xl font-bold mb-8">How it <span class="text-orange-500">Works</span></h2>
            <div class="space-y-8">
              <div class="flex gap-6">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-orange-500 flex items-center justify-center font-bold">1</div>
                <div>
                  <h4 class="text-xl font-bold mb-2">Host a Session</h4>
                  <p class="text-gray-400">Start a new session and set the stage for your group. Whether it's a rare tea or a new vintage, every session is an invitation to connect.</p>
                </div>
              </div>
              <div class="flex gap-6">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-orange-500 flex items-center justify-center font-bold">2</div>
                <div>
                  <h4 class="text-xl font-bold mb-2">Invite Your Circle</h4>
                  <p class="text-gray-400">Bring in your friends. Fellowsip makes it easy to taste together, even when you're miles apart. Real-time notifications keep the group connected.</p>
                </div>
              </div>
              <div class="flex gap-6">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-orange-500 flex items-center justify-center font-bold">3</div>
                <div>
                  <h4 class="text-xl font-bold mb-2">Share the Moment</h4>
                  <p class="text-gray-400">Discuss every note in real-time. When the session ends, our platform captures your collective impressions for a permanent, shared record.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="bg-[#161b22] p-8 rounded-3xl border border-gray-800 shadow-inner">
            <div class="space-y-4">
              <div class="flex items-center gap-3 p-4 rounded-xl bg-[#0b0e14] border border-gray-800">
                <div class="w-8 h-8 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-500 text-xs font-bold">JD</div>
                <div class="flex-1">
                  <p class="text-sm text-gray-300">"This oolong has a distinct honey aroma."</p>
                </div>
              </div>
              <div class="flex items-center gap-3 p-4 rounded-xl bg-[#0b0e14] border border-gray-800 ml-8">
                <div class="w-8 h-8 rounded-full bg-orange-500/20 flex items-center justify-center text-orange-500 text-xs font-bold">ME</div>
                <div class="flex-1">
                  <p class="text-sm text-gray-300">"Agreed! I'm also getting some stone fruit notes."</p>
                </div>
              </div>
              <div class="mt-8 p-6 rounded-xl bg-orange-500/5 border border-orange-500/20">
                <div class="flex items-center gap-2 mb-3">
                  <div class="w-5 h-5 bg-orange-500 rounded flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <span class="text-xs font-bold text-orange-500 uppercase tracking-wider">Collective Summary</span>
                </div>
                <p class="text-sm text-gray-400 italic">"A complex oolong characterized by a prominent honey sweetness and delicate stone fruit undertones..."</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <!-- Footer -->
    <footer class="py-12 border-t border-gray-800 bg-[#0b0e14]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-8">
          <div class="flex items-center gap-2">
            <div class="w-6 h-6 bg-orange-500 rounded flex items-center justify-center">
              <span class="text-white font-bold text-sm">F</span>
            </div>
            <span class="text-lg font-bold tracking-tight">Fellowsip</span>
          </div>
          <div class="flex gap-8 text-sm text-gray-500">
            <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
            <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
            <a href="/about" class="hover:text-white transition-colors">About</a>
          </div>
          <p class="text-sm text-gray-600">&copy; 2024 Fellowsip. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </main>
</Layout>

